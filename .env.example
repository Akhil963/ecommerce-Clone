# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration (Use MongoDB Atlas for production)
# Local: mongodb://localhost:27017/ecommerce_amazon
# Atlas: mongodb+srv://<username>:<password>@cluster.xxxxx.mongodb.net/ecommerce_amazon?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017/ecommerce_amazon

# JWT Configuration (CHANGE THIS IN PRODUCTION - use a strong random string)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRE=7d

# Google OAuth Configuration (Get from Google Cloud Console)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
# Change callback URL for production (e.g., https://your-domain.com/api/auth/google/callback)
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# Twilio Configuration (Phone Auth)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Email Configuration (Gmail SMTP)
# For Gmail: Enable "Less secure app access" or use App Password
# For production: Use services like SendGrid, Mailgun, or AWS SES
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=xxxx-xxxx-xxxx-xxxx
EMAIL_FROM=Amazon Clone <your-email@gmail.com>

# Frontend URL (Change for production)
# Development: http://localhost:3000
# Production: https://your-frontend-domain.com
CLIENT_URL=http://localhost:3000
